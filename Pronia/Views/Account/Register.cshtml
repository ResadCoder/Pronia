@model Pronia.ViewModels.RegisterVM
<div class="w-100 row d-flex justify-content-center align-content-center">
    <div class="col-lg-6 pt-5 pt-lg-0">
        <form action="#" method="post">
            <div class="login-form">
                <h4 class="login-title">Register</h4>
                <div class="row">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="col-md-6 col-12">
                        <label asp-for="Name"></label>
                        <input asp-for="Name"/>
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Name"></span>
                    </div>
                    <div class="col-md-6 col-12">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname">
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Surname"></span>
                    </div>
                    <div class="col-md-6 col-12">
                        <label asp-for="Username"></label>
                        <input asp-for="Username">
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Username"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Email"></label>
                        <input asp-for="Email"/>
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Email"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Password"></label>
                        <div style="position: relative;">
                            <input asp-for="Password" type="password" class="form-control toggle-password" data-eye="1"
                                   style="padding-right: 40px;" />
                            <i class="fa fa-eye toggle-eye" data-eye="1"
                               style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%);
                  cursor: pointer; color: #6c757d; font-size: 1.2rem;"></i>
                        </div>
                        <span class="text-danger mt-2" asp-validation-for="Password"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword"></label>
                        <div style="position: relative;">
                            <input asp-for="ConfirmPassword" type="password" class="form-control toggle-password" data-eye="2"
                                   style="padding-right: 40px;" />
                            <i class="fa fa-eye toggle-eye" data-eye="2"
                               style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%);
                  cursor: pointer; color: #6c757d; font-size: 1.2rem;"></i>
                        </div>
                        <span class="text-danger mt-2" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="col-12">
                        <button
                            class="btn btn-custom-size lg-size btn-pronia-primary">
                            Register
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.ConfirmEmail !=null && ViewBag.ConfirmEmail)
{
    <script>window.alert("Confirm your email.")</script>
}


<script>
    document.querySelectorAll('.toggle-eye').forEach(icon => {
        icon.addEventListener('click', function () {
            const index = this.dataset.eye;
            const input = document.querySelector(`.toggle-password[data-eye="${index}"]`);
            const isPassword = input.type === 'password';
            input.type = isPassword ? 'text' : 'password';
            this.classList.toggle('fa-eye');
            this.classList.toggle('fa-eye-slash');
        });
    });
</script>