@model Pronia.ViewModels.RegisterVM
<div class="w-100 row d-flex justify-content-center align-content-center">
    <div class="col-lg-6 pt-5 pt-lg-0">
        <form action="#" method="post">
            <div class="login-form">
                <h4 class="login-title">Register</h4>
                <div class="row">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="col-md-6 col-12">
                        <label asp-for="Name"></label>
                        <input asp-for="Name"/>
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Name"></span>
                    </div>
                    <div class="col-md-6 col-12">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname">
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Surname"></span>
                    </div>
                    <div class="col-md-6 col-12">
                        <label asp-for="Username"></label>
                        <input asp-for="Username">
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Username"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Email"></label>
                        <input asp-for="Email"/>
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Email"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Password"></label>
                        <input asp-for="Password">
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="Password"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword"/>
                        <span class="text-danger" style="margin-top: 10px" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="col-12">
                        <button
                            class="btn btn-custom-size lg-size btn-pronia-primary">
                            Register
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
