@using Pronia.Areas.Manage.ViewModels.Product
@model List<ProductIndexVM>
<div class="col-lg-6 grid-margin stretch-card">
  <div class="card"style="max-width: 2300px; margin: auto;">
    <div class="card-body" style="max-width: 2300px; margin: auto;" >
      <h4 class="card-title">Categories</h4>
      <a asp-controller="Product" asp-action="Create" class="btn btn-success">Create Product</a>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Discount</th>
          </tr>
          </thead>
          <tbody>
          @foreach (ProductIndexVM product in Model)
          {
            <tr>
              <td>
                <img src="~/admin/media/products/@product.MainImage"/>
              </td>
              <td>
                @product.Name
              </td>
              <td>
                @product.Price
              </td>
              <td>
                @product.Discount
              </td>
              <td>
                <a asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn bg-warning"><i class="mdi mdi-pencil"></i></a>
              <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn bg-danger"><i class="mdi mdi-delete"></i></a>
              </td>
            </tr>
          }
          </tbody>
        </table>
                    
      </div>
    </div>
  </div>
</div>

<style>
  .table th, .table td {
      padding: 50px 50px;
      vertical-align: middle;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["Success"] != null)
{
  <script>
        Swal.fire({
            text: "@TempData["Success"]",
            icon: "success"
        });
    </script>
}