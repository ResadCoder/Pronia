@model Pronia.Areas.Manage.ViewModels.Product.ProductUpdateVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <img src="~/admin/media/products/@Model.Images?.FirstOrDefault(i =>i.PositionEnum == ImagePositionEnum.main)!.ImgPath"/>
                    <label asp-for="MainImage"></label>
                    <input asp-for="MainImage" class="form-control" placeholder="MainImage" accept="image/*">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="MainImage"></span>
                </div>
                <div class="form-group">
                    <img src="~/admin/media/products/@Model.Images?.FirstOrDefault(i =>i.PositionEnum == ImagePositionEnum.hover)!.ImgPath"/>
                    <label asp-for="HoverImage"></label>
                    <input asp-for="HoverImage" class="form-control" placeholder="HoverImage" accept="image/*">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="HoverImage"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdditionalImages"></label>
                    <input asp-for="AdditionalImages" class="form-control" placeholder="AdditionalImages">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="AdditionalImages"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount"></label>
                    <input asp-for="Discount" class="form-control" placeholder="Discount">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Discount"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="@( new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name)))">
                    </select>
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="CategoryId"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ColorIds" class="form-label fw-bold text-primary">Colors</label>
                    <select asp-for="ColorIds" class="form-select" asp-items="@(new SelectList(Model.Colors, nameof(Color.Id), nameof(Color.Name)))">
                    </select>
                    <span class="text-danger pt-2 fs-6 small fw-light" asp-validation-for="ColorIds"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SizeIds" class="form-label fw-bold text-primary">Sizes</label>
                    <select asp-for="SizeIds" class="form-select" asp-items="@(new SelectList(Model.Sizes, nameof(Size.Id), nameof(Size.Name)))">
                    </select>
                    <span class="text-danger pt-2 fs-6 small fw-light" asp-validation-for="SizeIds"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
