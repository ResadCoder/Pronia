@model Pronia.Areas.Manage.ViewModels.Slide.SlideUpdateVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slides</h4>
            <form asp-action="Update" asp-controller="Slide" class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Order"></label>
                    <input asp-for = "Order" type="number"  class="form-control"  placeholder="Order">
                    <span class="text-danger  pt-2  fs-6 small  fw-light" asp-validation-for="Order"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Photo" class="form-label fw-bold text-primary mb-2"></label>
                    <div class="mb-3">
                        <img id="photo-preview"
                             src="~/assets/images/slider/@Model.ImagePath"
                             alt="Current Photo"
                             style="max-width: 180px; border-radius: 10px; box-shadow: 0 4px 16px #0002; margin-bottom: 10px;" />
                    </div>
                    <input asp-for="Photo" type="file"
                           class="form-control form-control-lg border-2 rounded-3 shadow-sm"
                           accept="image/*"
                           onchange="previewSelectedPhoto(this)" />
                    <span class="text-danger pt-2 fs-6 small fw-light d-block" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for = "Title"  class="form-control"  placeholder="Title">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for = "Description"  class="form-control"  placeholder="Description">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subtitle"></label>
                    <input asp-for = "Subtitle"  class="form-control"  placeholder="Subtitle">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Subtitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShowSlide"></label>
                    <select asp-for="ShowSlide" class="form-control" placeholder="ShowSlide">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                    <span class="text-danger pt-2 fs-6 small fw-light" asp-validation-for="ShowSlide"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-controller="Slide" asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

<script>
    function previewSelectedPhoto(input) {
        var preview = document.getElementById('photo-preview');
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>



