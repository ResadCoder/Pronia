@model  List<Size>
@{
  int count = 0;
}



<div class="col-lg-6 grid-margin stretch-card">
  <div class="card">
    <div class="card-body"  >
      <h4 class="card-title">Categories</h4>
      <a asp-controller="Size" asp-action="Create" class="btn btn-success">Create Slide</a>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>#</th>
            <th>Size</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          @foreach (Size size in Model)
          {
            count++;
            <tr>
              <td>
                @count
              </td>
              <td>
                @size.Name
              </td>

              <td>
                <a asp-controller="Size" asp-action="Update" asp-route-id="@size.Id" class="btn bg-warning"><i class="mdi mdi-pencil"></i></a>
                <a asp-controller="Size" asp-action="Delete" asp-route-id="@size.Id" class="btn bg-danger"><i class="mdi mdi-delete"></i></a>
              </td>
            </tr>
          }
         
          </tbody>
        </table>
                    
      </div>
    </div>
  </div>
</div>

<style>
  .table th, .table td {
      padding: 50px 50px;
      vertical-align: middle;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["Success"] != null)
{
  <script>
        Swal.fire({
            text: "@TempData["Success"]",
            icon: "success"
        });
    </script>
}