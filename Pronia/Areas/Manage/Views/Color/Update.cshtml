
@model Pronia.Areas.Manage.ViewModels.Color.ColorUpdateVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Color</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for = "Name" type="text" class="form-control"  placeholder="Name">
                    <span class="text-danger pt-2  fs-6 small  fw-light" asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-controller="Color" asp-action="Update" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>